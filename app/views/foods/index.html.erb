<div class="container mt-4">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary me-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add food
  </button>
  <%= render  'shared/modal'%>
  <table class="table table-hover table-bordered mt-4 table-responsive{-sm|-md|-lg|-xl} ">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Measurement</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name%></td>
          <td><%= food.measurement_unit%></td>
          <td>$<%= food.price%></td>
          <td><%= food.quantity%></td>
          <td>
            <% if can? :destroy, food %>
              <%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
