

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add Food</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
           <%= form_with model: @food, url: foods_path do |f| %>
            <div class="form-group mb-2">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group mb-2">
              <%= f.label :measurement_unit %>
              <%= f.text_field :measurement_unit, class: "form-control" %>
            </div>
            <div class="form-group mb-2">
              <%= f.label :price %>
              <%= f.text_field :price, class: "form-control" %>
            </div>
            <div class="form-group mb-2">
              <%= f.label :quantity %>
              <%= f.text_field :quantity, class: "form-control" %>
            </div>
            <div class="form-group mb-2 ">
              <%= f.submit "Create Food", class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>